<div class="header">
  <!--Content before waves-->

  <%- include('partials/navbar') %>

  <div class="inner-header">
    <div class="container">
      <div class="row">
        <div class="col col-lg-8 col-12" data-aos="zoom-in">
          <h1 id="homeHeader">Remind</h1>
          <h3>The Future of the World is in my Classroom today...</h3>
          <a href="/faculty/register" class="atag">
            <input
              type="button"
              id="facultyBtn"
              class="btn btn-dark buttons"
              name="faculty"
              value="Faculty"
          /></a>

          <a href="/student/register" class="atag">
            <input
              type="button"
              id="studentBtn"
              class="btn btn-light buttons"
              name="student"
              value="Student"
            />
          </a>
        </div>
        <div class="col col-lg-4 col-12" data-aos="fade-left">
          <img src="/images/home.svg" id="id" alt="home_image" />
        </div>
      </div>
    </div>
  </div>

  <%- include('partials/wave') %>
</div>

<section class="white-section" id="features">
  <div class="container-fluid">
    <div class="row">
      <div class="feature-box col-lg-4" data-aos="fade-right">
        <lottie-player
          src="/images/todolist.json"
          background="transparent"
          speed="1"
          style="height: 200px; width: 200px"
          loop
          autoplay
        ></lottie-player>
        <h3 class="feature-title">Easy to use.</h3>
        <p>So easy to use, Create your own lists on one click</p>
      </div>

      <div class="feature-box col-lg-4" data-aos="zoom-out">
        <lottie-player
          src="/images/calender.json"
          background="transparent"
          speed="1"
          loop
          autoplay
          style="height: 200px; width: 200px"
        ></lottie-player>
        <h3 class="feature-title">Schedule Assignments</h3>
        <p>Post assignments along with deadline</p>
      </div>

      <div class="feature-box col-lg-4" data-aos="fade-left">
        <lottie-player
          src="/images/securelock.json"
          background="transparent"
          speed="1"
          style="height: 200px; width: 200px"
          loop
          autoplay
        ></lottie-player>
        <h3 class="feature-title">Highly secure</h3>
        <p>Forget worries about your privacy</p>
      </div>
    </div>
  </div>
</section>

<section id="carousel-section">
  <div
    id="carouselExampleIndicators"
    class="carousel slide"
    data-ride="carousel"
  >
    <ol class="carousel-indicators">
      <li
        data-target="#carouselExampleIndicators"
        data-slide-to="0"
        class="active"
      ></li>
      <li data-target="#carouselExampleIndicators" data-slide-to="1"></li>
      <li data-target="#carouselExampleIndicators" data-slide-to="2"></li>
      <li data-target="#carouselExampleIndicators" data-slide-to="3"></li>
    </ol>
    <div class="carousel-inner">
      <div class="carousel-item active">
        <img
          class="d-block w-100 carousal-image"
          src="/images/todolist.jpg"
          alt="To Do image"
        />
        <div class="carousel-caption d-none d-md-block">
          <h4>To do lists</h4>
          <h5>Add your tasks to the list and do them one by one!!</h5>
        </div>
      </div>
      <div class="carousel-item">
        <img
          class="d-block w-100 carousal-image"
          src="/images/portable.jpg"
          alt="Portable image"
        />
        <div class="carousel-caption d-none d-md-block">
          <h4>Easily Accesible</h4>
          <h5>Get to know your assignments from anywhere</h5>
        </div>
      </div>
      <div class="carousel-item">
        <img
          class="d-block w-100 carousal-image"
          src="/images/oauth.jpg"
          alt="Oauth image"
        />
        <div class="carousel-caption d-none d-md-block">
          <h4>Google Oauth 2.0 implemented</h4>
          <h5>Provides Gmail login</h5>
        </div>
      </div>
      <div class="carousel-item">
        <img
          class="d-block w-100 carousal-image"
          src="/images/student.png"
          alt="Students image"
        />
        <div class="carousel-caption d-none d-md-block">
          <h4>Flexible actions</h4>
          <h5>Allows to select students</h5>
        </div>
      </div>
    </div>
    <a
      class="carousel-control-prev"
      href="#carouselExampleIndicators"
      role="button"
      data-slide="prev"
    >
      <span class="carousel-control-prev-icon" aria-hidden="true"></span>
      <span class="sr-only">Previous</span>
    </a>
    <a
      class="carousel-control-next"
      href="#carouselExampleIndicators"
      role="button"
      data-slide="next"
    >
      <span class="carousel-control-next-icon" aria-hidden="true"></span>
      <span class="sr-only">Next</span>
    </a>
  </div>
</section>

