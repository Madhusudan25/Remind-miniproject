<%- include('partials/header') %>

<link rel="stylesheet" href="/css/waves.css" />
<link rel="stylesheet" href="/css/register.css" />

<div class="header">
  <!--Content before waves-->

  <%- include('partials/navbar') %>

  <div class="inner-header flex">
    <div class="container">
      <div class="d-flex justify-content-center h-100">
        <div class="card">
          <div class="card-header">
            <h3>Sign In</h3>
            <h3 style="float: right">Faculty</h3>
          </div>
          <div class="card-body">
            <form action="/faculty/register" method="POST" id="form">
              <div class="input-group form-group">
                <div class="input-group-prepend">
                  <span class="input-group-text"
                    ><i class="fas fa-user"></i
                  ></span>
                </div>
                <input
                  type="text"
                  class="form-control"
                  name="name"
                  placeholder="Enter Your Name"
                  id="name"
                  required
                />
              </div>
              <div class="input-group form-group">
                <div class="input-group-prepend">
                  <span class="input-group-text"
                    ><i class="fas fa-user"></i
                  ></span>
                </div>
                <input
                  type="email"
                  class="form-control"
                  name="username"
                  placeholder="Email"
                  id="username"
                />
              </div>
              <div class="input-group form-group">
                <div class="input-group-prepend">
                  <span class="input-group-text"
                    ><i class="fas fa-key"></i
                  ></span>
                </div>
                <input
                  type="password"
                  placeholder="Password"
                  class="form-control"
                  name="password"
                  id="password"
                />
              </div>
              <div class="input-group form-group">
                <div class="input-group-prepend">
                  <span class="input-group-text"
                    ><i class="fas fa-book"></i
                  ></span>
                </div>
                <input
                  type="text"
                  class="form-control"
                  name="subject"
                  placeholder="Subject"
                  id="subject"
                  required
                />
              </div>
              <div class="form-group">
                <button
                  type="submit"
                  class="btn float-right signinBtn"
                  name="usertype"
                  value="faculty"
                  id="submitBtn"
                >
                  Sign In
                </button>
              </div>
              <a href="/faculty/register/auth/google" id="signin-anchor">
                <div class="signin-google">
                  <span id="google-icon"><i class="fab fa-google"></i></span>
                  Sign in with Google
                  <!-- <span><i class="fab fa-facebook-square"></i></span> -->
                  <!-- <span><i class="fab fa-twitter-square"></i></span> -->
                </div>
              </a>
            </form>
          </div>
          <div class="card-footer">
            <div class="d-flex justify-content-center links">
              Already have an account?<a href="/faculty">Log In</a>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
  <%- include('partials/wave') %>
</div>

<script src="/js/faculty-register.js" type="text/javascript"></script>

<%- include('partials/footer') %>
