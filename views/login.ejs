<%- include('partials/header') %>
<link rel="stylesheet" href="/css/waves.css" />
<link rel="stylesheet" href="/css/login.css" />

<div class="header">
  <!--Content before waves-->

  <%- include('partials/navbar') %>

  <div class="inner-header flex">
    <div class="container">
      <div class="d-flex justify-content-center h-100">
        <div class="card">
          <div class="card-header">
            <h3>Log In</h3>
            <h3 style="float: right" id="login-text"><%=usertype%></h3>
          </div>
          <div class="card-body">
            <form action="/login" method="POST" id="form">
              <div class="input-group form-group">
                <div class="input-group-prepend">
                  <span class="input-group-text"
                    ><i class="fas fa-user"></i
                  ></span>
                </div>
                <input
                  type="email"
                  class="form-control"
                  name="username"
                  placeholder="Username@gmail.com"
                  id="username"
                />
              </div>
              <div class="input-group form-group">
                <div class="input-group-prepend">
                  <span class="input-group-text"
                    ><i class="fas fa-key"></i
                  ></span>
                </div>
                <input
                  type="password"
                  placeholder="Password"
                  class="form-control"
                  name="password"
                  id="password"
                />
              </div>
              <div class="form-group">
                <button
                  type="submit"
                  class="btn float-right login_btn"
                  name="usertype"
                  value="<%=usertype%>"
                  id="submitBtn"
                >
                  Log in
                </button>
              </div>

              <div class="login-google">
                <span id="google-icon"><i class="fab fa-google"></i></span>
                <a href="/<%=usertype%>/login/auth/google" id="login-anchor"
                  >Login with Google</a
                >
                <!-- <span><i class="fab fa-facebook-square"></i></span> -->
                <!-- <span><i class="fab fa-twitter-square"></i></span> -->
              </div>
            </form>
          </div>
          <div class="card-footer">
            <div class="d-flex justify-content-center links">
              Don't have an account?<a href="/<%=usertype%>/register"
                >Sign In</a
              >
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>

  <%- include('partials/wave') %>
</div>

<script src="/js/login.js"></script>

<%- include('partials/footer') %>
